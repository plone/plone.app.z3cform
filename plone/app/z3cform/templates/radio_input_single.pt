<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:define="
        item python:args[0];
      "
      tal:omit-tag=""
>
  <input class="form-check-input ${view/klass}"
         id="${item/id}"
         accesskey="${view/accesskey|nothing}"
         alt="${view/alt}"
         checked="${python:'checked' if checked else None}"
         disabled="${python:'disabled' if disabled else None}"
         name="${item/name}"
         readonly="${python:'readonly' if readonly else None}"
         style="${python:style if style else None}"
         tabindex="${view/tabindex|nothing}"
         title="${view/title}"
         type="radio"
         value="${item/value}"
         tal:attributes="
           lang view/lang;
           onblur view/onblur;
           onchange view/onchange;
           onclick view/onclick;
           ondblclick view/ondblclick;
           onfocus view/onfocus;
           onkeydown view/onkeydown;
           onkeypress view/onkeypress;
           onkeyup view/onkeyup;
           onmousedown view/onmousedown;
           onmousemove view/onmousemove;
           onmouseout view/onmouseout;
           onmouseover view/onmouseover;
           onmouseup view/onmouseup;
           onselect view/onselect;
         "
         tal:define="
           checked item/checked;
           disabled item/disabled;
           readonly item/readonly;
           style item/style;
         "
  />
</html>
