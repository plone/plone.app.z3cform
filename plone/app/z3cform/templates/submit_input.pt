<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
>
  <button type="submit"
          tal:define="
            bsFallback python:'btn-secondary ' if not 'btn-' in view.klass else '';
          "
          tal:attributes="
            view/attributes;
            class string:btn ${bsFallback}${view/klass};
            formnovalidate python:view.ignoreRequiredOnValidation or None;
          "
  >${view/value}</button>
</html>
